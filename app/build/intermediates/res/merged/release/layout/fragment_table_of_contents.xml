<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.acmatics.securityguardexchange.fragments.NavigationDrawerFragment">

    <RelativeLayout
        android:id="@+id/profileLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/primary"
        android:clickable="false">

        <TextView
            android:id="@+id/bookNameInDrawer"
            style="@style/app_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_title_1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/dim_5dp"
            android:layout_alignBottom="@+id/bookImg"
            android:layout_toRightOf="@+id/bookImg" />

        <com.acmatics.securityguardexchange.common.CircularImageView
            android:id="@+id/bookImg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/anon_user"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>

    <ListView
        android:id="@+id/sideMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:divider="@color/white_smoke"
        android:dividerHeight="1dp" />
</LinearLayout>
