<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/dim_5dp"
    android:paddingRight="@dimen/dim_5dp"
    android:paddingTop="@dimen/dim_5dp">

    <TextView
        style="@style/app_font"
        android:id="@+id/affName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="2dp"
        android:text="Name"
        android:textColor="@color/primary_text"
        android:textSize="15sp" />

    <TextView
        style="@style/app_font"
        android:id="@+id/affNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="2dp"
        android:text="Number"
        android:textColor="@color/primary_text"
        android:textSize="15sp" />

    <TextView
        style="@style/app_font"
        android:id="@+id/affEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/affName"
        android:padding="2dp"
        android:text="Email"
        android:textColor="@color/secondary_text"
        android:textSize="12sp" />

    <TextView
        style="@style/app_font"
        android:id="@+id/affAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/affEmail"
        android:padding="2dp"
        android:text="Address"
        android:singleLine="false"
        android:layout_marginBottom="@dimen/dim_5dp"
        android:textColor="@color/secondary_text"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separator_color"
        android:layout_below="@+id/affAddress"></View>
</RelativeLayout>