<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Toolbar_Theme">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="app_font" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="searchEditText" parent="android:Widget.Holo.Light.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="btn_theme">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="btn_primary" parent="@style/btn_theme">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/primary_button_bg</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Widget.AppCompat.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
        <item name="android:titleTextStyle">@color/white</item>
    </style>

    <!--slide left right animation-->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="DialogUpDownAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_down</item>
    </style>

    <style name="DialogFadeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
