<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <TextView
        android:id="@+id/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_10"
        android:text="@string/quiz_list"
        android:textColor="@color/primary_text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/h1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_5dp"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/quizDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Quiz Date - 01 Feb 2016"
        android:textColor="@color/primary" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quizDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quizTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dim_5dp"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/quizQues"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dim_5dp"
            android:textColor="@color/primary_text" />

    </LinearLayout>

    <Button
        android:id="@+id/continueQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:layout_margin="10dp"
        android:background="@drawable/bg_disabled_button"
        android:text="@string/continue_"
        android:textColor="@color/white" />

</RelativeLayout>