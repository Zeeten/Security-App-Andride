<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        android:id="@+id/toolBar"
        layout="@layout/app_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/linearLayout2">

        <Button
            android:id="@+id/btnReTest"
            style="@style/btn_primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolBar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="@dimen/dim_5dp"
        android:layout_marginLeft="@dimen/dim_10"
        android:layout_marginRight="@dimen/dim_10"
        android:layout_marginTop="@dimen/dim_20"
        android:layout_marginBottom="@dimen/dim_10"
        android:layout_above="@+id/linearLayout2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/quiz_no"
            style="@style/app_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="QUIZ NO - 5"
            android:textColor="@color/primary_text"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/attempts_ques"
            style="@style/app_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attempts"
            android:textSize="20sp"
            android:textColor="@color/primary_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_below="@+id/quiz_time" />

        <TextView
            android:id="@+id/quiz_date"
            style="@style/app_font"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:textSize="20sp"
            android:textColor="@color/primary_text"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_below="@+id/grade" />

        <TextView
            android:id="@+id/totale_score"
            style="@style/app_font"
            android:textColor="@color/primary_text"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/quiz_no" />

        <TextView
            android:id="@+id/quiz_time"
            style="@style/app_font"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totale_score"
            android:layout_marginTop="@dimen/dim_10"
            android:text="Time"
            android:textSize="20sp"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/grade"
            style="@style/app_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textColor="@color/primary_text"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_below="@+id/attempts_ques" />

    </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>